<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="credit_view" model="ir.ui.view">
        <field name="name">credit.view</field>
        <field name="model">payment</field>
        <field name="inherit_id" ref="Hotel_app.payment_view_form"/>
        <field name="arch" type="xml">
        <xpath expr="//field[@name='currency']" position="after">
                    <field name="Credit"/>
                </xpath>
        </field>
    </record>

    <record id="credit_view_tree" model="ir.ui.view">
        <field name="name">credit.view.tree</field>
        <field name="model">payment</field>
        <field name="inherit_id" ref="Hotel_app.payment_view_tree"/>
        <field name="arch" type="xml">
        <xpath expr="//field[@name='currency']" position="after">
                    <field name="Credit"/>
                </xpath>
        </field>
    </record>


</odoo>
